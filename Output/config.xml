<config>
  <app>
    <title>Ionia Tale</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128" executed="Assets/Audio/Fx/Executed.wav"/>
  </audio>

  <!-- L02: DONE: Add an element for the entity manager and add the player parameters -->
  <sceneMenu>
	  <menu texturepath="Assets/Textures/Menu_sprite.png"/>
	  <buttons texturepath="Assets/Textures/Buttons.png"/>
  </sceneMenu>
  <sceneLevel1>
    <music path="Assets/Audio/Music/1_Astrub.ogg"/>
	  <textures victory_defeat="Assets/Textures/victory_death.png" death_text="Assets/Textures/Death.png" path="Assets/Textures/path.png" x="Assets/Textures/x.png"/>
  	<player x="100" y="262" texturepath="Assets/Textures/young_yasuo_spritesheet.png"/>
    <terrestreenemysmall x="100" y="100" texturepath="Assets/Textures/piku_spritesheet.png"/>
    <terrestreenemybig x="200" y="100" texturepath="Assets/Textures/mama_piku_spritesheet.png"/>
    <flyingenemy x="300" y="100" texturepath="Assets/Textures/bilrd_spritesheet.png"/>
  	<map>
  		<mapfolder path="Assets/Maps/"/>
  		<mapfile path="Assets/Maps/first_level.tmx"/>
  	</map>
  </sceneLevel1>
  <sceneLevel2>
	  <music path="Assets/Audio/Music/.ogg"/>
	  <textures victory_defeat="Assets/Textures/victory_death.png" death_text="Assets/Textures/Death.png" path="Assets/Textures/path.png" x="Assets/Textures/x.png"/>
  	<player x="10" y="0" texturepath="Assets/Textures/young_yasuo_spritesheet.png"/>
    <terrestreenemysmall x="0" y="0" texturepath="Assets/Textures/piku_spritesheet.png"/>
  	<map>
  		<mapfolder path="Assets/Maps/"/>
  		<mapfile path="Assets/Maps/second_level.tmx"/>
  	</map>
  </sceneLevel2>
</config>
